<p id="notice"><%= notice %></p>

<h1>Mixes</h1>

<table>
  <thead>
    <tr>
      <th>Mix name</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% current_user.mixes.each do |mix| %>
        <tr>
          <td><%= mix.mix_name %></td>
          <td><%= mix.user.full_name %></td>
          <td><%= link_to 'Show', mix %></td>
        </tr>
      <% end %>
      <% current_user.friends.each do |user| %>
        <% if logged_in? && current_user.friends.include?(user) %>
          <% user.mixes.each do |mix| %>
            <tr>
              <td><%= mix.mix_name %></td>
              <td><%= mix.user.full_name %></td>
              <td><%= link_to 'Show', mix %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Mix', new_mix_path %>
